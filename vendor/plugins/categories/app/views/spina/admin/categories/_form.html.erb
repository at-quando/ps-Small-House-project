<%= form_for [:admin, @category], html: {autocomplete: "off"} do |f| %>
  <div id="page_content">
    <div class="table-container">
      <table class="table table-form">
        <tr>
          <td>
            Tiêu đề
          </td>
          <td>
            <%= f.text_field :title %>
          </td>
        </tr>
        <tr>
          <td>
            Đường dẫn
          </td>
          <td>
            <%= f.text_field :urlTitle %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <button class="button button-primary" type="submit">
    Save
  </button>
  <%= link_to 'Cancel', admin_categories_path, class: 'button button-link' %>
  <% unless @category.new_record? %>
    <div class="pull-right">
      <%= link_to 'Delete', admin_category_path(@category), method: :delete, confirm: 'Are you sure?', class: 'button button-link button-danger' %>
    </div>
  <% end %>
<% end %>
