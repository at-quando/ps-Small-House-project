<div class="filters">
  <%= link_to 'Tạo học sinh mới', new_admin_student_path, class: 'button button-primary', data: {icon: 't'} %>
</div>
<div class="table-container">
  <h2>Danh sách học sinh tiêu biểu</h2>
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Name</th>
        <th>Birthday</th>
        <th>Phone</th>
        <th>Home</th>
        <th>Parent</th>
        <th>Start Day</th>
        <th>End Day</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% if @favor_students.any? %>
        <% @favor_students.each do |student| %>
          <tr>
            <td>
              <img class="avatar" src="<%= student.avatar %>">
            </td>
            <td>
              <%= student.name %>
            </td>
            <td>
              <% if student.birthday %>
                <%= student.birthday.strftime("%d-%m-%Y") %>
              <% end %>
            </td>
            <td>
              <%= student.phone %>
            </td>
            <td>
              <%= student.home %>
            </td>
            <td>
              <%= student.parent %>
            </td>
            <td>
              <% if student.start_date %>
                <%= student.start_date.strftime("%d-%m-%Y") %>
              <% end %>
            </td>
            <td>
              <% if student.end_date %>
                <%= student.end_date.strftime("%d-%m-%Y") %>
              <% end %>
            </td>
            <td class="nowrap align-right">
              <%= link_to spina.edit_admin_student_path(student), class: 'button button-link' do %>
                <%= icon('pencil-outline') %>
              <% end %>
            </td>
            <td class="nowrap align-right">
              <%= link_to spina.admin_delete_favorite_student_path(student),:method => :delete, class: 'btn btn-danger' do %>
                <%= icon('cross') %>
              <% end %>
            </td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td class="align-center" colspan="3">
            <em>There are no articles</em>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <h2>Danh sách tất cả học sinh</h2>
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Name</th>
        <th>Birthday</th>
        <th>Phone</th>
        <th>Home</th>
        <th>Parent</th>
        <th>Start Day</th>
        <th>End Day</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% if @students.any? %>
        <% @students.each do |student| %>
          <tr>
            <td>
              <img class="avatar" src="<%= student.avatar %>">
            </td>
            <td>
              <%= student.name %>
            </td>
            <td>
              <% if student.birthday %>
                <%= student.birthday.strftime("%d-%m-%Y") %>
              <% end %>
            </td>
            <td>
              <%= student.phone %>
            </td>
            <td>
              <%= student.home %>
            </td>
            <td>
              <%= student.parent %>
            </td>
            <td>
              <% if student.start_date %>
                <%= student.start_date.strftime("%d-%m-%Y") %>
              <% end %>
            </td>
            <td>
              <% if student.end_date %>
                <%= student.end_date.strftime("%d-%m-%Y") %>
              <% end %>
            </td>
            <td class="nowrap align-right">
              <%= link_to spina.edit_admin_student_path(student), class: 'button button-link' do %>
                <%= icon('pencil-outline') %>
              <% end %>
              <% if student.favorite != true %>
                <%= link_to spina.admin_favorite_student_path(student),:method => :patch, class: 'btn btn-primary' do %>
                  <%= icon('check') %>
                <% end %>
              <% end %>
            </td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td class="align-center" colspan="3">
            <em>There are no articles</em>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>