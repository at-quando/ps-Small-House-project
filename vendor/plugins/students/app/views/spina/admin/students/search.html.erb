<%= link_to '< Quay lại', admin_students_path, class: 'button button-normal', data: {icon: 't'} %>
<div class="table-container">
  <h2>Danh sách tìm kiếm</h2>
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Name</th>
        <th>Course</th>
        <th>Phone</th>
        <th>Home</th>
        <th>Parent</th>
        <th>Start Day</th>
        <th>End Day</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% if @students.any? %>
        <% @students.each do |student| %>
          <tr>
            <td>
              <img class="avatar" src="<%= student.avatar %>">
            </td>
            <td>
              <%= student.name %>
            </td>
            <td>
              <% if student.course %>
                <%= student.course.code %>
              <% end %>
            </td>
            <td>
              <%= student.phone %>
            </td>
            <td>
              <%= student.home %>
            </td>
            <td>
              <%= student.parent %>
            </td>
            <td>
              <% if student.start_date %>
                <%= student.start_date.strftime("%d-%m-%Y") %>
              <% end %>
            </td>
            <td>
              <% if student.end_date %>
                <%= student.end_date.strftime("%d-%m-%Y") %>
              <% end %>
            </td>
            <td class="nowrap align-right">
              <%= link_to spina.admin_student_path(student), class: 'button button-link' do %>
                <%= icon('pencil-outline') %>
              <% end %>
            </td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td class="align-center" colspan="3">
            <em>There are no articles</em>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>