<h3>Tạo học sinh</h3>
<%= form_for [:admin, @student], html: {autocomplete: "off"} do |f| %>
  <div id="page_content">
    <div class="table-container">
      <table class="table table-form">
        <tr>
          <td>
            Tên tuổi
          </td>
          <td>
            <%= f.text_field :name %>
          </td>
        </tr>
        <tr>
          <td>
            Ngày sinh
          </td>
          <td>
            <%= f.text_field :birthday, value: (@student.birthday.strftime("%d-%m-%Y") unless @student.new_record?), class: 'datepicker' %>
          </td>
        </tr>
        <tr>
          <td>
            Mô tả bản thân
          </td>
          <td>
            <%= f.text_area :description %>
          </td>
        </tr>
        <tr>
          <td>
            Điện thoại
          </td>
          <td>
            <%= f.text_field :phone %>
          </td>
        </tr>
        <tr>
          <td>
            Địa chỉ nhà
          </td>
          <td>
            <%= f.text_field :home %>
          </td>
        </tr>
        <tr>
          <td>
            Cha mẹ
          </td>
          <td>
            <%= f.text_field :parent %>
          </td>
        </tr>
        <tr>
          <td>
            Ngày bắt đầu học
          </td>
          <td>
            <%= f.text_field :start_date, value: (@student.start_date.strftime("%d-%m-%Y") unless @student.new_record?), class: 'datepicker' %>
          </td>
        </tr>
        <tr>
          <td>
            Ảnh đại diện
          </td>
          <td>
              <%= f.file_field :avatar %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <button class="button button-primary" type="submit">
    Save
  </button>
  <%= link_to 'Cancel', admin_students_path, class: 'button button-link' %>
  <% unless @student.new_record? %>
    <div class="pull-right">
      <%= link_to 'Delete', admin_student_path(@student), method: :delete, confirm: 'Are you sure?', class: 'button button-link button-danger' %>
    </div>
  <% end %>
<% end %>


