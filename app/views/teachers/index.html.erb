<div class="container custom">
  <h2>Danh sách giáo viên</h2>
  <div class="row">
    <% @teachers.each do |work| %>
      <div class="col-md-3 person">
        <div class="person-img-box">
          <img src="<%= work.avatar.to_s %>" class="person-img">
        </div>
        <p class="name"><%=work.name%></p>
        <p class="desc-main"><%=work.teaching_technic[0..120]%></p>
      </div>
    <% end %>
  </div>
</div>
