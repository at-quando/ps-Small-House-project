<div class="student-details container">
  <div class="row">
    <div class="col-md-4 p-info text-center">
      <h3>Thông tin cá nhân</h3>
      <div class="student-img-box">
        <img class="student-img" src="<%= @student.avatar %>">
      </div>
      <div class="student-meta">
        <div>
          <label>Họ và tên:</label><span class="name"> <%= @student.name %> </span>
        </div>
        <div>
            <label>Sơ yếu lý lịch:</label><br><span class="student-desc"> <%= @student.description %></span>
        </div>
      </div>
    </div>
    <div class="col-md-8">
      <div class="works">
        <h3>Tác phẩm</h3>
        <% @student.photos.each do |work| %>
          <div class="album-box">
            <%= link_to student_path(work),:method => :get do %>
              <img src="<%= work.file.to_s %>" class="album-item">
              <div class="album-meta">
                <p class="title"><%= work.title %></p>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
      <hr>
      <div class="reviews">
        <h3>Nhận xét từ giáo viên</h3>
        <p class="reviews-paragraph">
          <%= @student.review %>
        </p>
      </div>
    </div>
  </div>
</div>